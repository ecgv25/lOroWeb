{% extends '::base.html.twig' %}

{% block title %}Proveedores{% endblock %}

{% block body -%}


<div id="custom-header" class="page-header">
  <h1 style="font-size: 40pt;">Proveedores
    <small style="margin-left:10px; font-size: 26pt;">Ver</small>
  </h1>
</div>

{% include '::VariosSistema/mensajes_flash.html.twig' %}

<div class="row">
<dl  class="col-md-7  col-md-offset-1 dl-horizontal">
  <dt style="width:500px; margin-right: 10px">ID</dt>
  <dd style="width:600px;">{{ entity.id }}</dd>
  <dt style="width:500px; margin-right: 10px">Nombre del Proveedor</dt>
  <dd style="width:600px;">{{ entity.nbProveedor | capitalize }}</dd>
</dl>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-5"> 
    <a  href="{{ path('proveedores_delete',{ 'id' : entity.id}) }}" class="btn btn-lg btn-danger" >Eliminar</a>
    <a style="margin-left: 15px;" class="btn btn-lg btn-info" href="{{ path('proveedores') }}">Volver</a>
  </div>
</div>

{% endblock %}