{% extends '::base.html.twig' %}
{% block title %}Administraci&oacute;n - Proveedores{% endblock %}
{% block body -%}
<div class="page-header">
  <h1>Proveedores<small>Listado</small>
  </h1>
</div>

{% include '::VariosSistema/mensajes_flash.html.twig' %}


  <div class="col-md-offset-1 col-md-10" style="padding:0 0 3em 0; margin-left: -5px;">
    <a style="float:right;" href="{{ path('proveedores_new') }}" class="btn btn-lg btn-success">Agregar Nuevo Proveedor</a>
  </div>


  <div class="col-xs-offset-1 col-xs-11 col-md-offset-1 col-md-9">
    <table id="suppliers-list" class="table table-hover table-condensed" style="margin-bottom: 0px;">
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Proveedor</th>
                  <th>Realiza compra de Dolares</th>
                  <th>Acciones</th>
              </tr>
          </thead>
          <tbody>
          {% for entity in entities %}
              <tr>
                  <td>{{ entity.id }}</td>              
                  <td>{{ entity.nbProveedor }}</td>  
                  <td>{{ entity.compraDolares == 0 ? 'No' : 'Si' }}</td>
                  <td>
                    <a title="Ver" style="text-decoration: none;" href="{{ path('proveedores_show', { 'id': entity.id }) }}">
                      {% image 'assets/self/images/ver.png' %}
                        <img src="{{ asset_url }}" alt="Ver" />
                      {% endimage %} 
                    </a>
                    <a title="Ver" style="text-decoration: none;" href="{{ path('proveedores_edit', { 'id': entity.id }) }}">
                      {% image 'assets/self/images/editar.png' %}
                        <img src="{{ asset_url }}" alt="Editar" />
                      {% endimage %}
                    </a>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
    </table>
  </div>
{% endblock %}

{% block javascripts %}
  <script>
    var _globales = {
        titulosNoFiltrados: '[0,1,3]',
        idListado: 'suppliers-list',
        urlDatatableLang: '{{ asset('lang.txt') }}'
  };
  </script>

  {% javascripts  'assets/self/js/general/general_functions.js' filter='?uglifyjs2' output='js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %} 
{% endblock %}
