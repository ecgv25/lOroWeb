{% extends '::base.html.twig' %}
{% block title %}Administraci&oacute;n - Empresas Por Proveedores{% endblock %}
{% block body -%}
<div class="page-header">
  <h1>Empresa por Proveedores<small>Listado</small>
  </h1>
</div>

{% include '::VariosSistema/mensajes_flash.html.twig' %}


  <div class="col-md-offset-1 col-md-10" style="padding:0 0 3em 0; margin-left: -5px;">
    <a style="float:right;" href="{{ path('empresas-proveedores_new') }}" class="btn btn-lg btn-success">Agregar Nueva Empresa</a>
  </div>
  
  <div class="col-xs-offset-1 col-xs-11 col-md-offset-1 col-md-9">
    <table id="companies-by-supplier-list" class="table table-hover table-condensed" style="margin-bottom: 0px;">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre de la Empresa</th>
                <th>Proveedor asociado a la empresa</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>              
                <td>{{ entity.nombreEmpresa }}</td>
                <td>{{ entity.proveedor.nbProveedor }}</td>  
                <td>
                  <a title="Ver" style="text-decoration: none;" href="{{ path('empresas-proveedores_show', { 'id': entity.id }) }}">
                      {% image 'assets/self/images/ver.png' %}
                        <img src="{{ asset_url }}" alt="Ver" />
                      {% endimage %}
                  </a>
                  <a title="Ver" style="text-decoration: none;" href="{{ path('empresas-proveedores_edit', { 'id': entity.id }) }}">
                      {% image 'assets/self/images/editar.png' %}
                        <img src="{{ asset_url }}" alt="Editar" />
                      {% endimage %}
                  </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
{% endblock %}

{% block javascripts %}
  <script>
    var _globales = {
        titulosNoFiltrados: '[0,1,3]',
        idListado: 'companies-by-supplier-list',
        urlDatatableLang: '{{ asset('lang.txt') }}'
  };
  </script>

  {% javascripts  'assets/self/js/general/general_functions.js' filter='?uglifyjs2' output='js/compiled/app.js' %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %} 
{% endblock %}