{% extends '::base.html.twig' %}

{% block title %}Empresas Casa{% endblock %}




{% block body -%}
<div class="page-header">
    <h1 style="font-size: 40pt;">Empresa Casa<small style="margin-left:10px; font-size: 26pt;">Ver</small></h1>
</div>
<div class="row">
  <dl class="col-md-7  col-md-offset-1 dl-horizontal">
    <dt style="width:500px; margin-right: 10px">Nombre de la Empresa</dt>
    <dd style="width:600px;">{{ entity.nombreEmpresa }}</dd> 
  </dl>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-5">
    <a  href="{{ path('empresas-casa_delete',{ 'id' : entity.id}) }}" class="btn btn-lg btn-danger" >Eliminar</a>
    <a style="margin-left: 15px;" class="btn btn-lg btn-info" href="{{ path('empresas-casa') }}">Volver</a>
  </div>
</div>
{% endblock %}