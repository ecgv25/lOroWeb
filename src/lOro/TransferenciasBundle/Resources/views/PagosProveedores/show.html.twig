{% extends '::base.html.twig' %}

{% block title %}Pagos a Proveedores{% endblock %}

{% block body -%}
    <div class="page-header">
        <h1 style="font-size: 40pt;">Pago de Proveedor<small style="margin-left:10px; font-size: 26pt;">Ver</small>
        </h1>
    </div>
    <div class="col-lg-6 col-lg-offset-3 ">
        <div class="panel panel-info">
            <!-- Default panel contents -->
            <div class="panel-heading">Pago a Proveedor NÂ° {{ entity.id }}</div>
            <div class="panel-body">
                <table width="100%" class="table-hover table-condensed table-bordered">
                    <tr>
                        <td style="text-align: right;">Fecha del Pago</td>
                        <td style="text-align: center;">{{ entity.fePago | date('d-m-Y') }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Tipo de Transacci&oacute;n</td>
                        <td style="text-align: center;">{{ entity.tipoTransaccion.nbTransaccion }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Pagado Por</td>
                        <td style="text-align: center;">{{ entity.empresaCasa }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Pagado al Banco</td>
                        <td style="text-align: center;">{{ entity.banco.nbBanco }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Nro de Referencia</td>
                        <td style="text-align: center;">{{ entity.nroReferencia }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Tipo de Pago</td>
                        <td style="text-align: center;">{{ entity.tipoPago == 'B' ? 'Bolivares' : 'Euros' }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Monto del Pago</td>
                        <td style="text-align: center;">{{ entity.montoPagado | number_format('2',',','.') }} {{ entity.tipoPago == 'B' ? 'Bs.' : '$' }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Proveedor</td>
                        <td style="text-align: center;">{{ entity.empresaPago.proveedor.nbProveedor }}</td>
                    </tr>
                    <tr>
                        <td style="text-align: right;">Empresa</td>
                        <td style="text-align: center;">{{ entity.empresaPago.nombreEmpresa }}</td>
                    </tr>
                </table>
            </div>
            <div class="panel-footer">
                <a  href="{{ path('pagos_proveedores_delete',{ 'id' : entity.id}) }}" class="btn btn-lg btn-danger" >Eliminar</a>
                <a style="margin-left: 15px;" class="btn btn-lg btn-info" href="{{ path('pagos_proveedores') }}">Volver</a>      
            </div>

        </div>
    </div>
{% endblock %}
